@import "/assets/css/common.wxss";
@import "/assets/css/item.wxss";
.bar{
  display: flex;
}
.flex-big{
  flex: 1;
}
.flex-center{
  align-items: center;
}
.flex-justify-between{
  justify-content: space-between;
}
.width-big{
  width: 100%;
  height: 90%;
}
.area{
  position: relative;
}
.area-height{
  height: 420rpx;
}
.text-tips{
  position: absolute;
  right: 40rpx;
  bottom: 60rpx;
}
.padding-big-bottom{
  padding-bottom: 60rpx;
}
.padding-textsub-left{
  padding-left: 10rpx;
  padding-right: 10rpx;
}
/* 布局 */
.pos-absolute{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 1000;
}

/* 图片框架 */
.img-block{
  border:0;
  margin: 0;
  padding: 0;
  position: relative;
  display: inline-block;
}
.img-close{
  width: 48rpx;
  height: 48rpx;
  top:0;
  right: 0;
  position: absolute;
}
.img-confirm{
  width: 60rpx;
  height: 48rpx;
}
.bg-input{
  background-color: #F6F6F6;
}
.bg-confirm{
  background-color: #EFEFF4;
}

/* 置顶提示块 大小*/
.tips{
  padding:4rpx 8rpx;
  font-size: 22rpx;
  color: white;
  background-color: #00B4C2;
  border-radius: 4rpx;
}
.h-text-confirm{
  font-size: 32rpx;
}
.bg-white{
  background-color: white;
}
.bg-gray{
  background-color: #CCCCCC;
}
.border-radius-4{
  border-radius: 4rpx;
}